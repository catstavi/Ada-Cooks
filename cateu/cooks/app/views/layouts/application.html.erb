<!DOCTYPE html>
<html>
<head>
  <title>Better Noams and Garderns</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class ="header-title"> Better Noams and Garderns </div>
    <div class="log-options">
      <% if current_user %>
        <%= link_to "My Account", current_user %>
        <%= link_to "New Recipe", new_recipe_path %>
        <%= link_to "Log out", log_out_path, method: :get %>

      <% else %>
        <%= button_to "Sign up", sign_up_path, method: :get %>
        <%= button_to "Log in", log_in_path, method: :get %>
      <% end %>
    </div>

    <hr>
  </header>

<% flash.each do |name, msg| %> <!-- flash message provided by rails-->
<%= content_tag :div, msg, id: "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
