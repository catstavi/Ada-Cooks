<h2> <%= @recipe.name %> </h2>
<div class = "owner_options">
  <% if current_user == @recipe.user %>
    <%= link_to "Edit", edit_recipe_path %>
    <%= link_to "Remove", @recipe, method: :delete %>
  <% end %>
</div>

<h4>You will need:</h4>
<ul>
  <% @recipe.measurements.each do |measurement| %>
      <li>
        <%= measurement.amount %> <%= measurement.unit %> <%= measurement.ingredient.name %>
      </li>
  <% end %>
</ul>

<h4>Instructions:</h4>
<%= @recipe.instructions %>
